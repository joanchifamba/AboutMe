doctype html
head
  link(rel='stylesheet' type='text/css' href='calculator.css')
h1 Simple Calculator
form(action='/' method='POST')
  input(type='text' name='number1' placeholder='Enter number 1' required='')
  br
  select(name='operator' required='')
    option(value='+') +
    option(value='-') -
    option(value='*') *
    option(value='/') /
  br
  input(type='text' name='number2' placeholder='Enter number 2' required='')
  br
  button(type='submit') Submit
